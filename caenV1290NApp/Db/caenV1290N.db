record(mbbo, "$(P)$(R)AcquisitionMode") {
    field(DTYP, "asynInt32")
    field(OUT,  "@asyn($(PORT),$(ADDR=0))ACQUISITION_MODE")
    field(ZRVL, 0)
    field(ZRST, "Zero")
    field(ONVL, 1)
    field(ONST, "One")
    field(TWVL, 2)
    field(TWST, "Two")
}
