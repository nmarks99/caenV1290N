record(longout, "$(P)$(R):EnableAll") {
    field(VAL, 65535)
    field(OUT, "$(P)$(R):EnableBits.VAL PP")
}
record(longout, "$(P)$(R):DisableAll") {
    field(VAL, 0)
    field(OUT, "$(P)$(R):EnableBits.VAL PP")
}
record(mbboDirect, "$(P)$(R):EnableBits") {
    field(DTYP, "asynUInt32Digital")
    field(NOBT, 16)
    field(OUT,  "@asynMask($(PORT),$(ADDR=0),0xFFFF,1)ENABLE_PATTERN")
    field(FLNK, "$(P)$(R):EnableBitsRBV.PROC")
}
record(mbbiDirect, "$(P)$(R):EnableBitsRBV") {
    field(DTYP, "asynUInt32Digital")
    field(NOBT, 16)
    field(PINI, "YES")
    field(INP,  "@asynMask($(PORT),$(ADDR=0),0xFFFF,1)ENABLE_PATTERN")
}
